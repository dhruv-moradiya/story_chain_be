{
  "name": "storychain-be",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch --tsconfig tsconfig.json src/server.ts",
    "class": "tsx watch src/class.ts",
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "fastify",
    "typescript",
    "mongodb",
    "redis",
    "bullmq"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clerk/backend": "^2.18.3",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@clerk/fastify": "^2.4.41",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bullmq": "^5.61.0",
    "cloudinary": "^2.8.0",
    "cross-env": "^10.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "nodemailer": "^7.0.9",
    "reflect-metadata": "^0.2.2",
    "svix": "^1.77.0",
    "tsyringe": "^4.10.0",
    "winston": "^3.18.3",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.8.1",
    "@types/nodemailer": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
